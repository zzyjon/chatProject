<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
	<include resource="org/springframework/boot/logging/logback/defaults.xml" />
	
	<property name="LOG_DIR" value="/app/CHAT/logs" />
	<property name="LOG_PATH_NAME" value="${LOG_DIR}/chat_server.log" />
	
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<charset>UTF-8</charset>
			<pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5.-5level] %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOG_PATH_NAME}</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_PATH_NAME}.%d{yyyyMMdd}-%i.gz</fileNamePattern>
			<maxFileSize>500MB</maxFileSize>
			<maxHistory>14</maxHistory>
		</rollingPolicy>
		<encoder>
			<charset>UTF-8</charset>
			<pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%-5.-5level] [%-46class{36}:%3.3line] %msg%n</pattern>
		</encoder>
	</appender>
	
	
	<logger name="jdbc" level="OFF" />
	<logger name="jdbc.sqlonly" level="OFF" />
	<logger name="jdbc.sqltiming" level="DEBUG" />
	<logger name="jdbc.audit" level="OFF" />
	<logger name="jdbc.resultset" level="OFF" />
	<logger name="jdbc.resultsettable" level="OFF" />
	<logger name="jdbc.connection" level="OFF" />
	
	<logger name="org.springframework" level="info" />
	<logger name="com.amazonaws" level="error" />
	<logger name="org.apache.http" level="error" />
	<logger name="org.apache.commons.logging.impl.Jdk14Logger" level="info" />
	
	
	<root level="debug">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
	</root>	
	
	<springProfile name="dev">
	    <root level="debug">
	        <appender-ref ref="STDOUT" />
		    <appender-ref ref="FILE" />
	    </root>
	</springProfile>
	
	<springProfile name="stg">
	    <root level="debug">
	        <appender-ref ref="STDOUT" />
		    <appender-ref ref="FILE" />
	    </root>
	</springProfile>	
	
	<springProfile name="prod">
	    <root level="info">
	        <appender-ref ref="STDOUT" />
		    <appender-ref ref="FILE" />
	    </root>
	</springProfile>	
		
</configuration>